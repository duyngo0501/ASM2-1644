<main style="padding: 30px;">
        <div style="text-align: center; margin-bottom:20px; margin-top:20px">
            <h1>Account Management (user)</h1>
        </div>
        <div class="row">
            <div class="col-lg-6"></div>
            <div class="col-lg-6">
                <form action="/admin/accounts/user-Accounts" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search by username, name, email" id="search" name="search"
                            style="width: 500px;  float:right; margin-top: 10px; margin-bottom:20px;">
                    </div>
                </form>
            </div>
        </div>

        <!-- Account table -->
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>username</th>
                    <th>password</th>
                    <th>name</th>
                    <th>email</th>
                    <th>phone</th>
                    <th>address</th>
                </tr>
            </thead>
            <tbody>
                <!--Insert user data here-->
                {{#each User_accounts}}

                <tr>
                    <td>{{sum @index 1}}</td>
                    <td>{{this.username}}</td>
                    <td>{{this.password}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phone}}</td>
                    <td>{{this.address}}</td>
                </tr>

                {{/each}}
                <!--EOF insert user data-->
            </tbody>
        </table>
        <!-- End of Account Table -->
       
    </main>