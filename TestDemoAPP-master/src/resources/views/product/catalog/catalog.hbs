<main style="padding: 30px;">
    <div style="text-align: center; margin-bottom:20px; margin-top:20px">
        <h1>Catalog Management</h1>
    </div>
    <div class="row">
        <div class="col-lg-6" style="margin-top: 20px; margin-bottom:20px">
            <form action="/admin/catalogs/add" method="get">
                <button type="submit" class="btn btn-primary">Add new category</button>
            </form>
        </div>
        <div class="col-lg-6">
            <form action="/admin/catalogs" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search by catalog name" id="search" name="search"
                        style="width: 500px; float:right; margin-top: 10px">
                </div>
            </form>
        </div>
    </div>

    <!-- Catalog table -->
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <!--INSERT CATALOG DATA HERE-->
            {{#each Catalogs}}
            <tr>
                <td>{{sum @index 1}}</td>
                <td style="width: 1000px">{{this.name}}</td>
                <td><a href="/admin/catalogs/{{this._id}}/edit">Edit</a></td>
                <td><a href="/admin/catalogs/{{this._id}}/delete" onclick="return confirm_alert(this);">Delete</a></td>
            </tr>
            {{/each}}
            <!--EOF catalog DAta-->
        </tbody>
    </table>
    <!-- End of Catalog Table -->
    
</main>