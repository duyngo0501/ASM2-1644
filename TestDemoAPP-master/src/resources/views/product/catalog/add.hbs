<main>
    <div style="text-align: center; margin-bottom:50px; margin-top:50px">
        <h1>Catalog Control</h1>
    </div>

    <form action="/admin/catalogs/save" method="post">
        <div class="form-group" style="margin: auto; width: 35%; padding: 20px">
            <input type="text" id="id" name="id" value="" hidden>
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" style="width: 500px; margin: auto;" value=""
                required>
            <button type="submit" class="btn btn-success" id="confirm" name="Confirm"
                style="margin-top: 20px; float:right;">Confirm</button>
        </div>
    </form>
</main>